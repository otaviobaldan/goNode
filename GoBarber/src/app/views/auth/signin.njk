{# extendendo o arquivo auth, vamos herdar o "corpo" do html #}
{% extends "_layouts/auth.njk" %}

{# com o block body irá "encaixar" dentro da mesma estrutura do auth.njk #}
{% block body %}
  <form action="/signin" method="post">
    <img src='/images/logo.svg' height="42">

    <input type="text" name="email" placeholder="Seu email"/>
    <input type="password" name="password" placeholder="Senha secreta" value=""/>

    <button type="submit">Entrar</button>
    <a href="/signup">Criar conta grátis</a>
  </form>

{% endblock %}
